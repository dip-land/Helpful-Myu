{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "./dist/",
		"moduleResolution": "NodeNext",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"strict": true,
		"removeComments": true,
		"typeRoots": ["node_modules/@types"],
		"baseUrl": "."
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
