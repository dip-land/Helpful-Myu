{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "./dist/",
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "removeComments": true,
        "typeRoots": ["node_modules/@types"],
        "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
